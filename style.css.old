/*Before autoprefixer, more readable*/

@import url("https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;700&display=swap");

/*color variables*/
:root {
  --main: #fff;
  --main-accent: #e93629;
}
/*basic overriding of boilerplate styling*/
* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  font-family: "Oswald", sans-serif;
  scroll-behavior: smooth;
}

li,
ul a {
  font-weight: 500;
  font-size: 1.1em;
  color: black;
  text-decoration: none;
}

/* Header */

header {
  position: fixed;
  width: 100%;
  height: 15%;
  left: 50%;
  transform: translateX(-50%);
  background-color: var(--main);
  margin: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: height 0.3s ease-in-out, background-color 0.3s ease-in-out;
  z-index: 100;
}
.shrink-header {
  height: 8%;
  background-color: rgb(256, 256, 256, 0.8);
}

#hamburger {
  display: none;
}
.hamburger:focus {
  outline: none;
}
.menu-active {
  max-height: 300px !important;
}

/*Navigation*/
nav {
  width: 100%;
  padding: 0 10% 0 10%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}
.navigation-links {
  list-style: none;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  flex-wrap: wrap;
}
.navigation-links li {
  display: inline-block;
  padding: 0em 1em 0.2em 1em;
  position: relative;
}
/*link underline styling*/
.navigation-links li::before,
.navigation-links li::after {
  content: "";
  position: absolute;
  bottom: 2px;
  left: 0;
  right: 0;
  height: 2px;
  background-color: var(--main-accent);
  opacity: 0;
  transform: scaleX(0);
  transition: transform 0.2s, opacity 0.1s;
}
.navigation-links li:hover::after {
  opacity: 1;
  transform: scaleX(0.9);
}
/*Fixes that the pesudoelement can be displayed on will when you scroll to a section*/
.navigation-links li.is-active-link::after {
  opacity: 1;
  transform: scaleX(0.9);
}

/*Logo*/
.logo {
  width: 20%;
  max-width: 10rem;
  min-width: 5rem;
  padding: 0.3rem;
  cursor: pointer;
  transition: transform 0.3s ease, opacity 0.3s ease;
  opacity: 1;
}

/*Logo overlay*/
.logo-hover {
  position: absolute;
  width: 20%;
  max-width: 10rem;
  min-width: 5rem;
  height: 0;
  transition: height 0.3s ease-in-out, opacity 0.2s ease-in-out;
  pointer-events: none;
  opacity: 0;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.logo:hover + .logo-hover {
  opacity: 1;
  height: 100%;
}
.logo:hover + .logo-hover h2 {
  transform: translateY(-10px);
}
.logo:hover {
  opacity: 0.07;
}
/*Gives chevron overlaying logo on hover a smooth transition*/
.logo-hover h2 {
  transition: transform 0.4s ease-in-out;
}
.logo-hover h2 i {
  text-decoration: underline 2px var(--main-accent);
}

/*mobile view*/
@media (max-width: 770px) {
  .navigation-links {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;

    overflow: hidden;
    flex-wrap: nowrap;
    width: 100%;
    flex-direction: column;
    align-items: center;
    max-height: 0px;
    transition: all 0.5s ease-in-out;
  }
  #hamburger {
    display: block;
  }
  header {
    height: auto;
  }
  .logo {
    min-width: 6rem;
  }
  nav {
    padding: 1rem;
  }
  /*Override logo hover effect on mobile*/
  .logo:hover + .logo-hover {
    opacity: 0;
    height: 0;
  }
  .logo:hover + .logo-hover h2 {
    transform: translateY(0);
  }
  .logo:hover {
    opacity: 1;
  }
}

/*page content*/
.container {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  align-items: center;
  justify-items: center;
  flex-wrap: wrap;
}
.page {
  width: 100vw;
  height: 100vh;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #1d3557;
  scroll-snap-align: start;
  text-align: center;
}
.page h1 {
  font-size: clamp(3rem, 5vw, 5rem);
  color: white;
  text-shadow: 2px 2px 10px rgba(1, 1, 1, 0.1);
}
.page:nth-child(1) {
  background-image: url("img/1.jpeg");
  background-position: center;
  background-size: cover;
  background-attachment: fixed;
}
.page:nth-child(2) {
  background-color: #81b29a;
}
.page:nth-child(3) {
  background-color: #e07a5f;
}
.page:nth-child(4) {
  background-color: #3d405b;
}
